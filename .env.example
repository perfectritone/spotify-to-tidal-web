# Spotify API credentials (create at https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret

# Secret key for session signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key

# Base URL for OAuth callbacks (Spotify requires 127.0.0.1, not localhost)
BASE_URL=http://127.0.0.1:8000
